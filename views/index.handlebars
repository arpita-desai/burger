
<h2>Select Burgers</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{this.id}}.{{this.burger_name}}
        <button class="devour-btn" data-id="{{this.id}}">
            Devour it!
        </button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{this.id}}.{{this.burger_name}} - Devoured
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>